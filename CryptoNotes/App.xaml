<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CryptoNotes.App">
    <Application.Resources>
        <ResourceDictionary>
            <!--Global Styles-->
    <OnPlatform x:TypeArguments="x:String" x:Key="ConsoleCode">
        <On Platform="Android" Value="clacon.ttf#Classic Console" />
        <On Platform="iOS" Value="Classic Console" />
    </OnPlatform>
            <Color x:Key="NavigationPrimary">#000000</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationPrimary}" />
                <Setter Property="BarTextColor" Value="#20C20E" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>