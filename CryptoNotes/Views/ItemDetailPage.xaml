<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CryptoNotes.Views.ItemDetailPage" Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15" BackgroundColor="Black">
        <Label TextColor="#9f00ff" FontFamily="{StaticResource ConsoleCode}" Text="Title:" FontSize="45" />
        <Entry TextColor="#ffaf00" FontFamily="{StaticResource ConsoleCode}" Text="{Binding Item.Text}" FontSize="55" BackgroundColor="Black" />
        <Label TextColor="#9f00ff" FontFamily="{StaticResource ConsoleCode}" Text="Description:" FontSize="45" />
        <Editor TextColor="#ffaf00" FontFamily="{StaticResource ConsoleCode}" Text="{Binding Item.Description}" FontSize="50" BackgroundColor="Black" />
        <Label TextColor="#9f00ff" FontFamily="{StaticResource ConsoleCode}" Text="Key:" FontSize="45" />
        <Editor TextColor="#ffaf00" FontFamily="{StaticResource ConsoleCode}" Text="{Binding Item.CusCode}" FontSize="25" BackgroundColor="Black" />
        <Button Margin="0,10,0,0" Text="Learn more" Command="{Binding OpenWebCommand}"
                    BackgroundColor="#007fdf" TextColor="White" />
    </StackLayout>
</ContentPage>