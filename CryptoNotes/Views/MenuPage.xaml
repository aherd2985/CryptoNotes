<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CryptoNotes.Views.MenuPage" Title="Menu">
    <StackLayout BackgroundColor="Black" VerticalOptions="FillAndExpand">
        <ListView x:Name="ListViewMenu" HasUnevenRows="True" BackgroundColor="Black">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Label Text="{Binding Icon}" FontFamily="FontAwesomeSolid" FontSize="30" TextColor="#0086ff"  />
                            <Label FontFamily="{StaticResource ConsoleCode}" Text="{Binding Title}" FontSize="50"
                                    Margin="40,0,0,0" TextColor="#0086ff" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>